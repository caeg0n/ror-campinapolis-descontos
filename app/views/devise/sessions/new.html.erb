<%#= render partial: "preloader" %>
<!-- Login Wrapper Area-->
<div
  class="
    login-wrapper
    d-flex
    align-items-center
    justify-content-center
    text-center
  "
>
  <!-- Background Shape-->
  <div class="background-shape"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10 col-lg-8"><img class="big-logo" src="/img/core-img/logo-white.png" alt="">
        <!-- Register Form-->
        <div class="register-form mt-5">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group text-start mb-4"><span>Usu√°rio</span>
              <label for="username"><i class="fa-solid fa-user"></i></label>
              <%#= f.label :email %>
              <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "form-control",
                            placeholder: "joao@gmail.com" %>
            </div>
            <div class="form-group text-start mb-4"><span>Senha</span>
              <label for="password"><i class="fa-solid fa-key"></i></label>
              <%# <input
                class="form-control"
                id="password"
                type="password"
                placeholder="Password"
              > %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control",placeholder:"Senha" %>
            </div>
            
            <%= f.submit "ENTRAR", :class => 'btn btn-warning btn-lg w-100' %>
            <%# <button class="btn btn-warning btn-lg w-100" type="submit">ENTRAR</button> %>
          <% end %>
        </div>
        <!-- Login Meta-->
        <%# <div class="login-meta-data"><a class="forgot-password d-block mt-3 mb-1" href="forget-password.html">Forgot Password?</a>
          <p class="mb-0">Didn't have an account?<a class="mx-1" href="register.html">Register Now</a></p>
        </div> %>
        <!-- View As Guest-->
        <%# <div class="view-as-guest mt-3"><a class="btn" href="home.html">View as Guest</a></div> %>
      </div>
    </div>
  </div>
</div>
